{
    "gitbook": ">=3.2.0",
    "variables": {
      "django_version": "2.0.6"
    },
    "pdf": {
        "fontSize": 16
    },
    "plugins": [
        "heading-anchors",
        "richquotes",
        "github",
        "language-picker",
        "codeblock-label",
        "sectionx",
	"bibtex-indexed-cite",
	"image-captions",
	"include-codeblock","ace",
	"insert-logo"
    ],
    "pluginsConfig": {
        "richquotes": {
            "default": false
        },
        "github": {
            "url": "https://github.com/anagno/CodingStyle"
        },
        "language-picker": {
            "grid-columns": 3
        },
        "sectionx": {
            "tag": "b"
        },
	"bibtex-indexed-cite": {
            "path": "./literature.bib"
        },
	"image-captions": {
            "caption": "_CAPTION_"
	},
        "include-codeblock": {
            "template": "ace",
            "unindent": true,
            "theme": "monokai"
        },
	"insert-logo": {
            "url": "../../images/coding_style.png",
            "style": "background: none;"
        }
    }
}
